            </div> --}}
          </div>



          <!-- Submit button -->
          <div class="container justify-content-center d-flex">
            <button type="submit container" onclick="return validate()" class="mb-4 p-2" style="border: solid gold 1px ;background: none ; color: gold;width: 8vw ;height: 6vh ;
          border-radius: 2rem;
          ">Sign in</button>

        </form>
      </div>

      <script>
        function emailval() {
          var email = document.getElementById("login-user").value
          if (email == '' || email == null) {
            document.getElementById('login-user').style.border = 'solid red 3px'
            document.getElementById('email-label').innerHTML = 'Invalid User'
            document.getElementById('email-label').style.color = 'red'
            return false
          } else {
            document.getElementById('login-user').style.border = 'solid gold 1px'
            document.getElementById('email-label').innerHTML = 'Admin Username'
            document.getElementById('email-label').style.color = 'Gold'
            return true
          }
        }
        function password() {
          var pass = document.getElementById("login-password").value
          if (pass == "" || pass == null) {
            document.getElementById("login-password").style.border = "solid red 3px"
            document.getElementById("label-pass").style.color = 'red'
            document.getElementById("label-pass").innerHTML = 'Wrong password'
            return false
          } else {
            document.getElementById("login-password").style.border = "solid gold 1px"
            document.getElementById("label-pass").style.color = 'gold'
            document.getElementById("label-pass").innerHTML = 'password'
            return true
          }
        }
        function validate() {
          if (!emailval() || !password()) {
            return false
          }
        }


      </script>