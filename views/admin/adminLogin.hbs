        <form action="/admin/admin" method="post" class=" px-5 py-3" style="
    border-radius: 52px;
background: #121212;
box-shadow:  -11px -11px 22px #080808,
             11px 11px 22px #1c1c1c;">

          <!-- Email input -->
          <div class="form-outline mb-4 mt-5">
            <input type="text" id="login-user" name="user" onkeyup="emailval()" class="form-control"
              style="background: none;color: gold;border: solid gold 1px;" />
            <label class="form-label " id="email-label" style="color: gold;" for="loginName">Admin Username</label>
          </div>

          <!-- Password input -->
          <div class="form-outline mb-4">
            <input type="password" id="login-password" onkeyup="password()" name="password"
              style="background: none;color: gold;border: solid gold 1px;" class="form-control" />
            <label class="form-label" id="label-pass" style="color: gold;" for="loginPassword">Password</label>
          </div>

          <div class="container-fluid text-center">
            {{#if error}}
            <span class="alert mb-3 " style="color: red; border: red;">{{error}}</span>
            {{/if}}
          </div>

