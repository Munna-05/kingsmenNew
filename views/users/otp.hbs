<div class="container-fluid d-flex justify-content-center">
    <div class="row">
        <div class="col-12 mt-5 rounded container-fluid text-center d-flex justify-content-center p-5">
          <form action="/otpDone" method="post">
          {{!-- <span class="" style="color: gold;">Enter Otp</span><br><br> --}}

         
          <input type="text" value="" onkeyup="otpval()" class="form-control" minlength="6" maxlength="6" id="otpId" name="otp" style="background: none;border: solid gold 2px ;color: gold;" >
         {{#if err}}
          <span id="span" class="mt-3 me-4 alert border border-danger btn" style="color: rgb(255, 0, 0);border: none;" >{{err}}</span>
          {{else}}
          <span id="span" class="mt-3 me-4 btn" style="color: gold;border: none;" >Enter Otp</span>

          {{/if}}
          <input type="submit" onclick="return validate()" class="btn mt-3 btn-warning" value="Sumbit">
          </form>

        </div>
    </div>
</div>

<script>
function otpval(){
var otp=document.getElementById('otpId').value 

if(isNaN(otp)){
    document.getElementById('span').innerHTML="Letters not Allowed"
    document.getElementById('otpId').style.border='solid red 2px'
    document.getElementById('span').style.color='red'


    return false
}


if(otp==""){
    document.getElementById('span').innerHTML="Enter Otp"
    document.getElementById('span').style.color='red'
    document.getElementById('otpId').style.border='solid red 2px'
    return false
}else{
    document.getElementById('span').innerHTML="Enter Otp"
    document.getElementById('span').style.color='gold'
    document.getElementById('otpId').style.border='solid gold 2px'
    return true

}

}


function validate(){
    if(!otpval()){
        return false
    }
}

</script>